<%= form_for(@tournament) do |f| %>
  <%= f.label :name, 'Tournament Name: ' %>
  <%= f.text_field :name %>
<br>
  <%= f.label :private, 'Invite Only Tournament? ' %>
  <%= f.check_box :private %>
<br>
<br>
  <%= f.label :host, 'Host: ' %>
  <%= f.text_field :host %>
<br>
<br>
  <%= f.label :start_date, 'Start Date: ' %> 
  <%= f.date_field :start_date %>
  <br>
  <%= f.label :end_date, "End Date: " %>
  <%= f.date_field :end_date %>
<br>
<br>
  <%= f.label :start_time, 'Start Time: ' %>
  <%= f.time_field :start_time %>
  <br>
  <%= f.label :end_time, "End Time: " %>
  <%= f.time_field :end_time %>
<br>
<br>
  <%= f.label :first_prize, 'First Place Prize: ' %>
  <%= f.text_field :first_prize %>
<br>
<br>
  <%= f.label :second_prize, 'Second Place Prize: ' %>
  <%= f.text_field :second_prize %>
<br>
<br>
  <%= f.label :third_prize, 'Third Place Prize: ' %>
  <%= f.text_field :third_prize %>
<br>
<br>
  <%= f.label :game_id, 'Game: ' %>
  <%= f.select :game_id, Game.all.map { |g| [g.name, g.id] } %>
<br>
<br>
  <%= f.label :platform_id, 'Platform: ' %>
  <%= f.select :platform_id, Platform.all.map { |p| [p.name, p.id] } %>
<br>
<br>
  <%= f.label :description, 'Tournament Description: ' %>
  <%= f.text_area :description %>
<br>
<br>
  <%= f.label :location, 'Tournament Location: ' %>
  <%= f.text_field :location %>
<br>
<br>
<center>
<%= f.submit button_text  %>
<br>
<small><%= link_to "cancel", :back %></small>
</center>

<% end %>