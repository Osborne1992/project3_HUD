<tr>
  <td style="text-align:center">
    <br />
    <% if user.first_name == nil %>
      <em>
        <small>
          no name data
        </small>
      </em>
    <% else %>
      <%= link_to user.try(:first_name), user_path(user.id) %>
    <% end %>
  </td>
  <td style="text-align:center">
    <br />
    <% if user.last_name == nil %>
      <em>
        <small>
          no name data
        </small>
      </em>
    <% else %>
      <%= link_to user.try(:last_name), user_path(user.id) %>
    <% end %>
  </td>
  <td style="text-align:center">
    <br />
    <%= link_to user.username, user_path(user.id) %>
  </td>
  <td>
      <%= link_to image_tag("http://i.imgur.com/GRL5rIj.png", class: "lower-friend-button"), friendships_path(:friend_id => user), :method => :post, class: "add-friend-button" %>
  </td>
</tr>