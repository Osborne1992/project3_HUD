<!DOCTYPE html>
<html>
<head>
  <title>H U D</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="cover-top-bar"></div>
  <div class="container">
    <nav class="top-bar">
      <div class="box box-1"></div>
      <div class="box box-2">
        <%= link_to image_tag("/images/small_hud.png"), root_path, class: "center-hud" %>
      </div>
      <div class="box box-6 higher-search-bar">
        <input class="search-bar">
        <button class="search-go">GO!</button>
      </div>
      <div class="box box-3">
          <%= image_tag current_user.profile_image.layout_cog.url, class: "profile-image" %>
      </div>
    </nav>
    <br>
    <nav><center>
      <ul>
        <li>
          <%= link_to "Events", events_path %>
        </li>
        <li>
          <%= link_to "Friendships", friendships_path %>
        </li>
        <li>
          <%= link_to "Games", games_path %>
        </li>
        <li>
          <%= link_to "Groups", groups_path %>
        </li>
        <li>
          <%= link_to "Platforms", platforms_path %>
        </li>
        <li>
          <%= link_to "Private Messages", private_messages_path %>
        </li>
        <li>
          <%= link_to "Reviews", reviews_path %>
        </li>
        <li>
          <%= link_to "Tournaments", tournaments_path %>
        </li>
        <li>
          <%= link_to "Users", users_path %>
        </li>
        <% if user_signed_in? %>
        <li>
          <%= link_to "Profile", user_path(current_user) %>
        </li>
        <li>
          <%= link_to "Log out", destroy_user_session_path, method: :delete %>
        </li>
        <% else %>
        <li>
          <%= link_to "Sign Up", new_user_registration_path %>
        </li>
        <li>
          <%= link_to "Sign In", new_user_session_path %>
        </li>
        <% end %>
      </ul>
    </center></nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </div>
</body>
</html>
