<!DOCTYPE html>
<html>
<head>
  <title>H U D</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="cover-top-bar">
    <nav class="top-bar">
      <div class="box box-1">
      </div>
      <div class="box box-2">
      <%= link_to image_tag("/images/small_hud.jpg"), root_path, class: "hud-logo-nav" %>
      </div>
      <div class="box box-6 higher-search-bar">
        <input class="search-bar" placeholder="search hud...">
        <button class="search-go">GO!</button>
        <br>
        <br>
        <% if user_signed_in? %>
        <ul class="navlinks">
          <li>
            <%= link_to "Events", events_path %>
          </li>
          <li>
            <%= link_to "Games", games_path %>
          </li>
          <li>
            <%= link_to "Groups", groups_path %>
          </li>
          <li>
            <%= link_to "Platforms", platforms_path %>
          </li>
          <li>
            <%= link_to "Reviews", reviews_path %>
          </li>
          <li>
            <%= link_to "Tournaments", tournaments_path %>
          </li>
          <li>
            <%= link_to "Users", users_path %>
          </li>
        </ul>
        <% else %>
        <% end %>
      </div>
      <div class="box box-2 profile-circle">
        <dropdown>
          <input id="toggle2" type="checkbox">
          <label for="toggle2" class="animate">
            <% if user_signed_in? %>
            <% if current_user.profile_image == nil %>
            <%= link_to image_tag("/images/small-default-user-image.png"), user_path(current_user) %>
            <% else %>
            <%= link_to image_tag(current_user.profile_image.layout_cog.url), user_path(current_user) %> <%= current_user.username %>
            <% end %>
            <i class="fa fa-bars float-right"></i></label>
            <ul class="animate wl">
              <li class="animate"><%= link_to "Profile", user_path(current_user) %><i class="fa fa-code float-right"></i></li>
              <li class="animate"><%= link_to "Inbox", private_messages_path %><i class="fa fa-arrows-alt float-right"></i></li>
              <li class="animate"><%= link_to "Edit Profile", edit_user_registration_path %><i class="fa fa-cog float-right"></i></li>
              <li class="animate"><%= link_to "Log out", destroy_user_session_path, method: :delete %><i class="fa fa-cog float-right"></i></li>
            </ul>
            <% else %>
            <%= image_tag("/images/small-default-user-image.png") %><i class="fa fa-bars float-right"></i></label>
            <ul class="animate wl">
              <li class="animate">
                <%= link_to "Sign In", new_user_session_path %>
                <i class="fa fa-code float-right"></i>
              </li>
              <li class="animate">
                <%= link_to "Sign Up", new_user_registration_path %>
                <i class="fa fa-cog float-right"></i>
              </li>
            </ul>
            <% end %>
          </dropdown>
        </div>
        <div class="box box-1">
        </div>
      </nav>
    </div>
    <br>
    <div class="container">

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <%= yield %>

    </div>
  </body>
  </html>
